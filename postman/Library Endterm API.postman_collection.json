{
  "info": {
    "name": "Library Endterm API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "GET /api/health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "health"
          ]
        }
      }
    },
    {
      "name": "GET /api/books",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/books",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "POST /api/books (EBOOK)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Java Programming\",\n  \"price\": 45.0,\n  \"categoryId\": 2,\n  \"bookType\": \"EBOOK\",\n  \"fileSizeMb\": 15.5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/books",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "PUT /api/books/1",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Clean Code (Updated)\",\n  \"price\": 33.0\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/books/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books",
            "1"
          ]
        }
      }
    },
    {
      "name": "DELETE /api/books/1",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/books/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books",
            "1"
          ]
        }
      }
    }
  ]
}